<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
  <div id="main">

    <div id="top-nav">
      <span class="logo"><%= image_tag 'logo.png' %></span>
      <% if current_user %>
        <span id="current-user">
          <%= current_user.name %>, get something done || 
          <%= link_to "Settings", edit_user_registration_path, class: 'btn' %> | <%= link_to "Sign Out", destroy_user_session_path, class: 'btn', method: :delete %>
        </span>
      <% else %>
        <%= render "welcome/sign_in" %>
      <% end %>
    </div>

    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %>

<%= yield %>

  </div>
</body>
</html>
