<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
  <div id="main">
    <div class="logo"><%= link_to image_tag('logo.png'), root_path %></div> 
    <div id="top-nav">
      <% if current_user %>
        <div id="current-user">
          <p>Hi, <%= current_user.name %>, let's get something done</p>
          <div id="top-buttons"><%= link_to "Settings", edit_user_registration_path, class: 'btn' %> | <%= link_to "Sign Out", destroy_user_session_path, class: 'btn', method: :delete %></div>
        </div>
      <% else %>
        <%= render "welcome/sign_in" %>
      <% end %>
    </div>

    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %>

<%= yield %>

  </div>
</body>
</html>
